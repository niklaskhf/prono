<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    >


    <TextView
        android:text="First Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_text"
        android:textSize="18sp"/>


    <TextView
        android:text="blablabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real_first_name"
        android:textSize="30sp"/>

    <TextView
        android:text="Last Name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/last_text"
        android:textSize="18dp"/>

    <TextView
        android:text="blablabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real_last_name"
        android:textSize="30sp"/>

    <TextView
        android:text="Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/title_text"
        android:textSize="18dp"/>

    <TextView
        android:text="blablabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real_title"
        android:textSize="30sp"/>

    <TextView
        android:text="Country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/country_text"
        android:textSize="18dp"/>

    <TextView
        android:text="blablabla"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/real_country"
        android:textSize="30sp"/>

    <TextView
        android:text="Gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gender_text"
        android:textSize="18dp"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gender_sign"
            android:background="@drawable/pregnant_woman"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/male_sign"
            android:background="@drawable/running_man"/>

    </FrameLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/delete_button"
            android:background="@drawable/delete_icon"
            android:layout_gravity="bottom|left"/>

        <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/play_button"
            android:background="@drawable/play_icon"
            android:layout_gravity="bottom|center"/>

        <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/edit_button"
            android:background="@drawable/edit_icon"
            android:layout_gravity="bottom"/>

    </GridLayout>
</LinearLayout>